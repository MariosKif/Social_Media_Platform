---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Social Media Planner Dashboard" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  :root {
    --primary: #6366f1;
    --primary-dark: #4f46e5;
    --secondary: #8b5cf6;
    --success: #10b981;
    --danger: #ef4444;
    --warning: #f59e0b;
    --bg-primary: #ffffff;
    --bg-secondary: #f8fafc;
    --bg-tertiary: #f1f5f9;
    --text-primary: #1e293b;
    --text-secondary: #64748b;
    --border: #e2e8f0;
    --shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1);
    --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
  }

  html, body {
    width: 100%;
    height: 100%;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    background: var(--bg-secondary);
    color: var(--text-primary);
  }

  .dashboard-container {
    display: flex;
    height: 100vh;
    overflow: hidden;
  }

  /* Sidebar */
  .sidebar {
    width: 260px;
    background: var(--bg-primary);
    border-right: 1px solid var(--border);
    display: flex;
    flex-direction: column;
    box-shadow: var(--shadow);
  }

  .sidebar-header {
    padding: 1.5rem;
    border-bottom: 1px solid var(--border);
  }

  .sidebar-header h1 {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--text-primary);
  }

  .sidebar-nav {
    flex: 1;
    padding: 1rem 0;
  }

  .sidebar-nav button {
    width: 100%;
    padding: 0.75rem 1.5rem;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    background: none;
    border: none;
    color: var(--text-secondary);
    cursor: pointer;
    transition: all 0.2s;
    font-size: 0.9375rem;
  }

  .sidebar-nav button:hover {
    background: var(--bg-tertiary);
    color: var(--text-primary);
  }

  .sidebar-nav button.active {
    background: var(--bg-tertiary);
    color: var(--primary);
    font-weight: 600;
    border-left: 3px solid var(--primary);
  }

  .sidebar-footer {
    padding: 1rem;
    border-top: 1px solid var(--border);
  }

  .btn-new-post {
    width: 100%;
    padding: 0.75rem;
    background: var(--primary);
    color: white;
    border: none;
    border-radius: 0.5rem;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.2s;
  }

  .btn-new-post:hover {
    background: var(--primary-dark);
  }

  /* Main Content */
  .dashboard-main {
    flex: 1;
    overflow-y: auto;
    padding: 2rem;
  }

  .view-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
  }

  .view-header h1 {
    font-size: 2rem;
    font-weight: 700;
    color: var(--text-primary);
  }

  /* Buttons */
  .btn-primary {
    padding: 0.75rem 1.5rem;
    background: var(--primary);
    color: white;
    border: none;
    border-radius: 0.5rem;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.2s;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }

  .btn-primary:hover {
    background: var(--primary-dark);
  }

  .btn-secondary {
    padding: 0.75rem 1.5rem;
    background: var(--bg-tertiary);
    color: var(--text-primary);
    border: 1px solid var(--border);
    border-radius: 0.5rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s;
  }

  .btn-secondary:hover {
    background: var(--border);
  }

  .btn-danger {
    background: var(--danger);
    color: white;
  }

  .btn-danger:hover {
    background: #dc2626;
  }

  .btn-icon {
    padding: 0.5rem;
    background: none;
    border: none;
    color: var(--text-secondary);
    cursor: pointer;
    border-radius: 0.25rem;
    transition: all 0.2s;
  }

  .btn-icon:hover {
    background: var(--bg-tertiary);
    color: var(--text-primary);
  }

  .btn-small {
    padding: 0.375rem 0.75rem;
    font-size: 0.875rem;
    background: var(--bg-tertiary);
    border: 1px solid var(--border);
    border-radius: 0.375rem;
    cursor: pointer;
    transition: all 0.2s;
  }

  .btn-small:hover {
    background: var(--border);
  }

  /* Calendar View */
  .calendar-view {
    background: var(--bg-primary);
    border-radius: 0.75rem;
    padding: 2rem;
    box-shadow: var(--shadow);
  }

  .calendar-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
  }

  .calendar-controls {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .calendar-controls h2 {
    font-size: 1.5rem;
    font-weight: 600;
    min-width: 200px;
    text-align: center;
  }

  .calendar-nav-btn {
    padding: 0.5rem;
    background: var(--bg-tertiary);
    border: 1px solid var(--border);
    border-radius: 0.5rem;
    cursor: pointer;
    transition: all 0.2s;
  }

  .calendar-nav-btn:hover {
    background: var(--border);
  }

  .calendar-grid {
    display: flex;
    flex-direction: column;
  }

  .calendar-weekdays {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    gap: 0.5rem;
    margin-bottom: 0.5rem;
  }

  .calendar-weekday {
    padding: 0.75rem;
    text-align: center;
    font-weight: 600;
    color: var(--text-secondary);
    font-size: 0.875rem;
    text-transform: uppercase;
  }

  .calendar-days {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    gap: 0.5rem;
  }

  .calendar-day {
    min-height: 120px;
    border: 1px solid var(--border);
    border-radius: 0.5rem;
    padding: 0.5rem;
    background: var(--bg-primary);
    transition: all 0.2s;
  }

  .calendar-day:hover {
    background: var(--bg-tertiary);
    border-color: var(--primary);
  }

  .calendar-day.other-month {
    opacity: 0.4;
    background: var(--bg-secondary);
  }

  .calendar-day.today {
    border: 2px solid var(--primary);
    background: #eef2ff;
  }

  .calendar-day-number {
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: var(--text-primary);
  }

  .calendar-day-posts {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .calendar-post-item {
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    color: white;
    font-size: 0.75rem;
    cursor: pointer;
    transition: opacity 0.2s;
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
  }

  .calendar-post-item:hover {
    opacity: 0.8;
  }

  .post-time {
    font-weight: 600;
    font-size: 0.625rem;
  }

  .post-preview {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .calendar-post-more {
    padding: 0.25rem;
    text-align: center;
    font-size: 0.75rem;
    color: var(--text-secondary);
    font-weight: 600;
  }

  .calendar-legend {
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border);
  }

  .calendar-legend h3 {
    margin-bottom: 1rem;
    font-size: 1rem;
    font-weight: 600;
  }

  .legend-items {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .legend-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .legend-color {
    width: 16px;
    height: 16px;
    border-radius: 0.25rem;
  }

  /* Client Management */
  .clients-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
  }

  .client-card {
    background: var(--bg-primary);
    border: 1px solid var(--border);
    border-radius: 0.75rem;
    overflow: hidden;
    box-shadow: var(--shadow);
    transition: all 0.2s;
  }

  .client-card:hover {
    box-shadow: var(--shadow-lg);
    transform: translateY(-2px);
  }

  .client-card-header {
    padding: 1.5rem;
    color: white;
  }

  .client-card-header h2 {
    font-size: 1.25rem;
    font-weight: 700;
  }

  .client-card-body {
    padding: 1.5rem;
  }

  .client-email {
    color: var(--text-secondary);
    margin-bottom: 1rem;
    font-size: 0.875rem;
  }

  .client-platforms {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .platform-badge {
    padding: 0.25rem 0.75rem;
    background: var(--bg-tertiary);
    border-radius: 1rem;
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--text-primary);
  }

  .client-card-actions {
    padding: 1rem 1.5rem;
    border-top: 1px solid var(--border);
    display: flex;
    gap: 0.5rem;
    justify-content: flex-end;
  }

  .empty-state {
    grid-column: 1 / -1;
    text-align: center;
    padding: 3rem;
    color: var(--text-secondary);
  }

  /* Modal */
  .modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1000;
    padding: 2rem;
  }

  .modal-content {
    background: var(--bg-primary);
    border-radius: 0.75rem;
    box-shadow: var(--shadow-lg);
    max-width: 600px;
    width: 100%;
    max-height: 90vh;
    overflow-y: auto;
  }

  .post-editor-modal {
    max-width: 700px;
  }

  .modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem;
    border-bottom: 1px solid var(--border);
  }

  .modal-header h2 {
    font-size: 1.5rem;
    font-weight: 700;
  }

  .modal-close {
    background: none;
    border: none;
    font-size: 2rem;
    color: var(--text-secondary);
    cursor: pointer;
    line-height: 1;
    padding: 0;
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 0.25rem;
    transition: all 0.2s;
  }

  .modal-close:hover {
    background: var(--bg-tertiary);
    color: var(--text-primary);
  }

  /* Forms */
  .client-form,
  .post-form {
    padding: 1.5rem;
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
  }

  .form-group label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 600;
    color: var(--text-primary);
    font-size: 0.875rem;
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid var(--border);
    border-radius: 0.5rem;
    font-size: 0.9375rem;
    transition: all 0.2s;
    font-family: inherit;
  }

  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--primary);
    box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
  }

  .form-group textarea {
    resize: vertical;
  }

  .char-count {
    margin-top: 0.5rem;
    font-size: 0.75rem;
    color: var(--text-secondary);
    text-align: right;
  }

  .color-picker {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    gap: 0.5rem;
  }

  .color-option {
    width: 100%;
    aspect-ratio: 1;
    border: 3px solid transparent;
    border-radius: 0.5rem;
    cursor: pointer;
    transition: all 0.2s;
  }

  .color-option.selected {
    border-color: var(--text-primary);
    transform: scale(1.1);
  }

  .platform-checkboxes {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 0.75rem;
  }

  .platform-checkbox {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    cursor: pointer;
    padding: 0.5rem;
    border: 1px solid var(--border);
    border-radius: 0.5rem;
    transition: all 0.2s;
  }

  .platform-checkbox:hover {
    background: var(--bg-tertiary);
  }

  .platform-checkbox input {
    width: auto;
  }

  .client-preview {
    margin-top: 0.5rem;
    padding: 0.5rem;
    border-left: 3px solid;
    background: var(--bg-tertiary);
    border-radius: 0.25rem;
  }

  .form-actions {
    display: flex;
    gap: 1rem;
    justify-content: flex-end;
    margin-top: 2rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--border);
  }

  /* Dashboard Overview */
  .dashboard-overview h1 {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 2rem;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .stat-card {
    background: var(--bg-primary);
    border: 1px solid var(--border);
    border-radius: 0.75rem;
    padding: 1.5rem;
    display: flex;
    align-items: center;
    gap: 1rem;
    box-shadow: var(--shadow);
  }

  .stat-icon {
    width: 56px;
    height: 56px;
    border-radius: 0.75rem;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
  }

  .stat-content h3 {
    font-size: 2rem;
    font-weight: 700;
    color: var(--text-primary);
  }

  .stat-content p {
    color: var(--text-secondary);
    font-size: 0.875rem;
  }

  .overview-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
  }

  .overview-section {
    background: var(--bg-primary);
    border: 1px solid var(--border);
    border-radius: 0.75rem;
    padding: 1.5rem;
    box-shadow: var(--shadow);
  }

  .overview-section h2 {
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
  }

  .upcoming-posts {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .upcoming-post-item {
    display: flex;
    gap: 1rem;
    padding: 1rem;
    border: 1px solid var(--border);
    border-radius: 0.5rem;
    transition: all 0.2s;
  }

  .upcoming-post-item:hover {
    background: var(--bg-tertiary);
    border-color: var(--primary);
  }

  .post-indicator {
    width: 4px;
    border-radius: 0.25rem;
    flex-shrink: 0;
  }

  .post-info {
    flex: 1;
  }

  .post-header {
    display: flex;
    gap: 0.75rem;
    align-items: center;
    margin-bottom: 0.5rem;
  }

  .client-name {
    font-weight: 600;
    color: var(--text-primary);
  }

  .post-platform {
    padding: 0.125rem 0.5rem;
    background: var(--bg-tertiary);
    border-radius: 0.25rem;
    font-size: 0.75rem;
    color: var(--text-secondary);
  }

  .post-content-preview {
    color: var(--text-secondary);
    font-size: 0.875rem;
    margin-bottom: 0.5rem;
  }

  .post-date {
    font-size: 0.75rem;
    color: var(--text-secondary);
  }

  .status-breakdown {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .status-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    border: 1px solid var(--border);
    border-radius: 0.5rem;
  }

  .status-badge {
    width: 48px;
    height: 48px;
    border-radius: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 1.25rem;
    color: white;
  }

  .status-badge.draft {
    background: var(--warning);
  }

  .status-badge.scheduled {
    background: var(--primary);
  }

  .status-badge.published {
    background: var(--success);
  }

  .recent-posts {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .recent-post-item {
    padding: 1rem;
    border: 1px solid var(--border);
    border-radius: 0.5rem;
  }

  .recent-post-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.5rem;
  }

  .client-badge-small {
    padding: 0.25rem 0.75rem;
    border-radius: 0.25rem;
    color: white;
    font-size: 0.75rem;
    font-weight: 600;
  }

  .post-status-small {
    padding: 0.25rem 0.75rem;
    border-radius: 0.25rem;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: capitalize;
  }

  .post-status-small[data-status="draft"] {
    background: #fef3c7;
    color: #92400e;
  }

  .post-status-small[data-status="scheduled"] {
    background: #e0e7ff;
    color: #3730a3;
  }

  .post-status-small[data-status="published"] {
    background: #d1fae5;
    color: #065f46;
  }

  .post-date-small {
    font-size: 0.75rem;
    color: var(--text-secondary);
    margin-top: 0.5rem;
    display: block;
  }

  .empty-message {
    text-align: center;
    color: var(--text-secondary);
    padding: 2rem;
  }

  /* Posts List View */
  .posts-list-view {
    background: var(--bg-primary);
    border-radius: 0.75rem;
    padding: 2rem;
    box-shadow: var(--shadow);
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
    margin-top: 2rem;
  }

  .post-card {
    border: 1px solid var(--border);
    border-radius: 0.75rem;
    padding: 1.5rem;
    background: var(--bg-primary);
    transition: all 0.2s;
  }

  .post-card:hover {
    box-shadow: var(--shadow-lg);
    transform: translateY(-2px);
  }

  .post-card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .client-badge {
    padding: 0.375rem 0.75rem;
    border-radius: 0.375rem;
    color: white;
    font-size: 0.75rem;
    font-weight: 600;
  }

  .post-status {
    padding: 0.375rem 0.75rem;
    border-radius: 0.375rem;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: capitalize;
  }

  .post-status[data-status="draft"] {
    background: #fef3c7;
    color: #92400e;
  }

  .post-status[data-status="scheduled"] {
    background: #e0e7ff;
    color: #3730a3;
  }

  .post-status[data-status="published"] {
    background: #d1fae5;
    color: #065f46;
  }

  .post-card h3 {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: var(--text-primary);
  }

  .post-date {
    font-size: 0.875rem;
    color: var(--text-secondary);
    margin-bottom: 1rem;
  }

  .post-card-actions {
    display: flex;
    gap: 0.5rem;
  }

  .post-card-actions button {
    flex: 1;
    padding: 0.5rem;
    border: 1px solid var(--border);
    border-radius: 0.375rem;
    background: var(--bg-tertiary);
    cursor: pointer;
    transition: all 0.2s;
    font-size: 0.875rem;
  }

  .post-card-actions button:hover {
    background: var(--border);
  }
</style>
